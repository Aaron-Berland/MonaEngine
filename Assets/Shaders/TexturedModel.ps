#version 450 core 
layout (location = 3) uniform sampler2D diffuseTexture;
layout (location = 4) uniform vec3 colorIntensity;

out vec4 color;

in vec3 normal;
in vec2 texCoord;

void main()
{
	float ambient = 0.1f;
	vec3 norm = normalize(normal);
	vec3 lightDir = normalize(vec3(-1.0,1.0,-2.0));
	float diffuse = max(dot(norm, -lightDir), 0.0);
	vec3 diffuseColor = texture(diffuseTexture, texCoord).xyz;
	vec3 result = (ambient + diffuse) * diffuseColor;
	color = vec4(colorIntensity * result, 1.0);

}